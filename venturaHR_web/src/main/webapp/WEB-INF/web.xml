<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://JAVA.SUN.COM/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>VENTURAHR_web</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <description></description>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.edu.infnet.app.usuarios.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/usuarios/login</url-pattern>
    </servlet-mapping>
        
    <servlet>
        <description></description>
        <display-name>CadastroServlet</display-name>
        <servlet-name>CadastroServlet</servlet-name>
        <servlet-class>br.edu.infnet.app.usuarios.CadastroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroServlet</servlet-name>
        <url-pattern>/cadastrar</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <security-constraint>
        <display-name>Todos os usuários</display-name>
        <web-resource-collection>
            <web-resource-name>Área de todos os usuários</web-resource-name>
            <description />
            <url-pattern>/usuarios/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Início</web-resource-name>
            <description />
            <url-pattern>/index.jsp</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description />
            <role-name>empresa</role-name>
            <role-name>administrador</role-name>
            <role-name>candidato</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>Área das empresas</display-name>
        <web-resource-collection>
            <web-resource-name>Área das empresas</web-resource-name>
            <description />
            <url-pattern>/empresas/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description />
            <role-name>empresa</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>Área dos candidatos</display-name>
        <web-resource-collection>
            <web-resource-name>Área dos candidatos</web-resource-name>
            <description />
            <url-pattern>/candidatos/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description />
            <role-name>candidato</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>VenturaHR</realm-name>
        <form-login-config>
            <form-login-page>/home.jsp</form-login-page>
            <form-error-page>/error.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <description />
        <role-name>empresa</role-name>
    </security-role>
    <security-role>
        <description />
        <role-name>candidato</role-name>
    </security-role>
    <security-role>
        <description />
        <role-name>administrador</role-name>
    </security-role>
</web-app>